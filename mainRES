# include <iostream> 
# include <SFML/Graphics.hpp>

using namespace sf;



class GameArea {

private:
    Texture texture;
    Sprite sprite[17];

    int blockWidht = 64;
    int grid[6][6] = { 0 };
    int n = 0;


public:
    GameArea() {

        texture.loadFromFile("image/15.png");

        for (int i = 0; i < 4; i++)
            for (int j = 0; j < 4; j++)
            {
                n++;
                sprite[n].setTexture(texture);
                sprite[n].setTextureRect(IntRect(i * blockWidht, j * blockWidht, blockWidht, blockWidht));
                grid[i + 1][j + 1] = n;
            }
    };

    int drawSprite(RenderWindow& window) {

        for (int i = 0; i < 4; i++)
            for (int j = 0; j < 4; j++)
            {
                // —читываем значение €чейки игрового пол€Е
                int n = grid[i + 1][j + 1];
                // Еи устанавливаем на нее соответствующий спрайт
                sprite[n].setPosition(i * blockWidht, j * blockWidht);
                // ќтрисовка спрайта
                window.draw(sprite[n]);
            }

        return 0;
    };

    
    
    
    

};


int main() {

    RenderWindow window(sf::VideoMode(200, 200), "SFML works!");
    
    GameArea GameArea;

    while (window.isOpen())
    {
        Event event;
        while (window.pollEvent(event))
        {
            if (event.type == Event::Closed)
                window.close();
        }

        window.clear(Color::White);
        
        GameArea.drawSprite(window);

        window.display();
    }

	return 0;
};